<h1>Administrar Productos</h1>
<br>
<h3>Agregar producto</h3>
<div class="container">
  <form id="idForm">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" required name="title">
      <label for="description" class="form-label">Description</label>
      <input type="text" class="form-control" required name="description">
      <label for="price" class="form-label">Price</label>
      <input type="number" class="form-control" required name="price">
      <label for="stock" class="form-label">Stock</label>
      <input type="number" class="form-control" required name="stock">
      <label for="category" class="form-label">Category</label>
      <input type="text" class="form-control" required name="category">
      <label for="code" class="form-label">Code</label>
      <input type="text" class="form-control" required name="code">
      <label for="thumbnail" class="form-label">Thumbnail</label>
      <input type="text" class="form-control" name="thumbnail">
      <br>
      <button type="submit" class="btn btn-dark">Enviar</button>
    </div>
  </form>
</div>

<hr>

<h3>Eliminar producto</h3>
<br>
<div class="container">
  <form id="idFormDelete">
    <div class="mb-3">
      <label for="code" class="form-label">Ingresar el code</label>
      <input type="text" class="form-control" required name="code">
      <br>
      <button type="submit" class="btn btn-dark">Enviar</button>
    </div>
  </form>
</div>

<hr>

<h3>Tabla de productos</h3>
<div class="container">
  <table id="tableProducts" class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>
        <th scope="col">Category</th>
        <th scope="col">Status</th>
        <th scope="col">Code</th>
        <th scope="col">Thumbnail</th>
        
        </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
        <td>{{this.status}}</td>
        <td>{{this.code}}</td>
        <td>{{this.thumbnail}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>